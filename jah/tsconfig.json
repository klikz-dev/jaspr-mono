{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true, // Remove when target is es6 (after dropping ie11)
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "jsx": "react",
    "noEmit": true,
    "strictNullChecks": false,
  },
  "include": [
    "src"
  ],
  "extends": "expo/tsconfig.base"
}
